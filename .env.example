# Nexus Platform - Environment Variables
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Nexus

# Clerk Authentication
# Get your keys from https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/builder
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Supabase Database
# Get your keys from https://supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJxxxxx

# AI Services
# Anthropic Claude API - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API - Get from https://platform.openai.com
OPENAI_API_KEY=sk-xxxxx

# Vercel Deployment API
# Get your token from https://vercel.com/account/tokens
VERCEL_API_TOKEN=xxxxx
VERCEL_TEAM_ID=team_xxxxx (optional)

# GitHub Integration
# Create a GitHub App or use Personal Access Token
# https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN=ghp_xxxxx
GITHUB_APP_ID=xxxxx (if using GitHub App)
GITHUB_APP_PRIVATE_KEY=xxxxx (if using GitHub App)

# Stripe Payments (Optional - for monetization)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Error Tracking (Optional)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Email Service (Optional - for notifications)
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=noreply@nexus.dev

# Feature Flags
NEXT_PUBLIC_ENABLE_COLLABORATION=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEMO_MODE=true

# Rate Limiting
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PAID_TIER=100
